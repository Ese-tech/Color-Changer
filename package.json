{
	"name": "color-changer",
	"module": "color.ts",
	"type": "module",
	"scripts": {
		"dev": "bun build --watch src/color.ts --outdir public",
		"build": "bun build src/color.ts --outdir public",
		"build-css": "bun run tailwindcss -i ./src/input.css -o ./public/output.css --watch",
		"start": "bun run dev & bun run build-css"
	},
	"devDependencies": {},
	"peerDependencies": {
		"typescript": "^5.7.2"
	},
	"dependencies": {
		"autoprefixer": "^10.4.20",
		"postcss": "^8.4.49",
		"tailwindcss": "^3.4.17"
	}
}
